$minion: #2123a0
$spell: #21a09e
$secret: #a09e21
$weapon: #a02123
*
  box-sizing border-box

header
  background $minion
  margin-bottom 2rem

input[type='text']
  margin 1rem
  background white
  font-size 1.3rem
  border none
  box-shadow inset 0 0 3px rgba(0,0,0,0.3)
  border-radius 3px
  padding 0 2rem
  width calc(100% - 2rem)
  height 4rem

li
  list-style none
  display inline-block
  padding .25rem .75rem
  margin 2px
  border-radius 3px

  &:hover
    cursor pointer

  &.minion
    background lighten($minion, 35)
    color darken($minion, 25)

    &:hover
      background lighten($minion, 30)

  &.spell
    background lighten($spell, 25)
    color darken($spell, 25)

    &:hover
      background lighten($spell, 20)

  &.secret
    background lighten($secret, 35)
    color darken($secret, 25)

    &:hover
      background lighten($secret, 30)

  &.weapon
    background lighten($weapon, 25)
    color darken($weapon, 25)

    &:hover
      background lighten($weapon, 20)
